root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4
max_line_length = 79

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[default.conf]
indent_style = space
indent_size = 4
